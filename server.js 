import express from "express";
import OpenAI from "openai";
import dotenv from "dotenv";

dotenv.config();

const app = express();
app.use(express.json());
app.use(express.static("public"));

const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY,
});

app.post("/api/lichtara", async (req, res) => {
  const userText = req.body.text;

  const response = await openai.responses.create({
    model: "gpt-4.1-mini",
    input: [
      {
        role: "system",
        content: `
VocÃª Ã© o Companheiro LICHTARA.
NÃ£o substitua a voz humana.
NÃ£o conclua julgamentos Ã©ticos.
Amplifique consciÃªncia, nÃ£o produza dependÃªncia.
`
      },
      {
        role: "user",
        content: userText
      }
    ]
  });

  res.json({
    answer: response.output[0].content[0].text
  });
});

app.listen(3000, () => {
  console.log("ðŸŒ¿ LICHTARA Companion vivo em http://localhost:3000");
});
